# Local Development Environment Variables for RunBot Web Admin
# Use this file for local development

# Database (SQLite for local development)
DATABASE_URL=sqlite:///./dev.db

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Web Security
WEB_SECRET_KEY=dev-secret-key-change-in-production

# Storage (local files for development)
STORAGE_TYPE=disk
MEDIA_PATH=./media

# File upload limits (relaxed for development)
MAX_UPLOAD_SIZE_MB=50
MAX_IMAGE_SIZE_MB=20
MAX_VIDEO_SIZE_MB=100
MAX_DOCUMENT_SIZE_MB=50
MAX_FILES_PER_USER=20
MAX_TOTAL_FILES=5000
AUTO_CLEANUP_DAYS=30

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=True
