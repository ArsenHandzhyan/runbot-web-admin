# RunBot Web Admin Environment Variables

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production
WEB_SECRET_KEY=change-this-secret-key-in-production

# Storage
# Type: 'render_disk' or 'r2'
STORAGE_TYPE=r2

# Render Disk (if STORAGE_TYPE=render_disk)
MEDIA_PATH=./media

# Cloudflare R2 (if STORAGE_TYPE=r2)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_R2_BUCKET=runbot-media

# Telegram Bot Token (not required for web interface)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# File limits
MAX_UPLOAD_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
MAX_VIDEO_SIZE_MB=50
MAX_DOCUMENT_SIZE_MB=10
MAX_FILES_PER_USER=5
MAX_TOTAL_FILES=1000

# Auto cleanup
AUTO_CLEANUP_DAYS=7

# Server
PORT=5000
FLASK_ENV=production
FLASK_DEBUG=False
LOG_LEVEL=INFO

# Security/session
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_MINUTES=480
ENABLE_DEBUG_ENDPOINTS=0

# Login rate limiting
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW_SECONDS=300
LOGIN_LOCKOUT_SECONDS=900

# UI limits
DASHBOARD_RECENT_LIMIT=5
MODERATION_ALL_LIMIT=50
MODERATION_PENDING_LIMIT=0

# Cache TTLs
DASHBOARD_CACHE_TTL_SECONDS=30
AI_REPORTS_CACHE_TTL_SECONDS=30

# Pagination
PARTICIPANTS_PER_PAGE=50

# Cache TTLs
PARTICIPANTS_CACHE_TTL_SECONDS=30
STATISTICS_CACHE_TTL_SECONDS=30
